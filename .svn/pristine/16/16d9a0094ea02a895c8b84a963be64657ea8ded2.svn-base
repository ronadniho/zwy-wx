.container{
  width: 100%;
  height: 100%;
  background: #f2f2f2;
}
.container .header-box{
  display: flex;
  width: 100%;
  padding:40rpx 0;
  border-bottom: 2px solid #c9c9c9;
  background: #ffffff;
}
.container .header-box .header-box1{
  flex: 1;
  text-align: center;
  border-right: 1px solid #c9c9c9;
  height: 126rpx;
  padding: 0 87.5rpx;
  line-height: 56rpx;
}
.container .header-box .header-box1:last-child{
 border-right: 0;
}
.container .header-box .header-box1 .num{
  font-size: 64rpx;
}
.container .header-box .header-box1 .text1{
  font-size: 30rpx;
  border-bottom: 4px solid #f34043;
}
.container .header-box .header-box1 .text2{
  font-size: 30rpx;
  border-bottom: 4px solid #1b81d3;
}
.container .header-box .header-box1 .text3{
  font-size: 30rpx;
  border-bottom: 4px solid #5db75d;
}
.tabcontent-container{
  width: 100%;
}
.tabcontent-container .content-item{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 340rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  position: relative;
  height: 260rpx;
  overflow: hidden;
  font-size: 36rpx;
}
.content-item image{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 300rpx;
  height: 220rpx;
}
.content-item .item-title{
  height: 162rpx;
  overflow: hidden;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  margin-top: 5rpx;
}
.content-item .zuozhe{
  display: flex;
}
.content-item .item-zjr{
  flex: 1;
  height: 70rpx;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.content-item .item-time{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9;
  padding: 5rpx 10rpx;
}
.content-item .item-time i{
  margin-right: 10rpx;
}
