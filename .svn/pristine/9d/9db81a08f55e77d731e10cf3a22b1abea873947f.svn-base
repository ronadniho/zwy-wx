.tabcontent-container {
  width: 100%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tabcontent-container .content-item {
  position: relative;
  box-sizing: border-box;
  padding: 25rpx 20rpx 24rpx 314rpx;
  margin: 10rpx 0;
  background: #fff;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  height: 222rpx;
  font-size: 36rpx;
  overflow-x: auto;
  overflow-y: hidden;
}

.del {
  position: absolute;
  top: 0;
  background-color: #e64340;
  width: 100rpx;
  height: 222rpx;
  text-align: center;
  z-index: 4;
  right: -100rpx;
  color: #fff;
  padding-top: 63rpx;
}
.del view{
  font-size: 24rpx;
}
.content-item .image {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 280rpx;
  height: 174rpx;
}

.content-item .schedulecomp {
  color: #f34141;
  font-size: 32rpx;
  align-items: center;
}

.content-item .schedulecomp myProgress {
  display: block;
  height: 17rpx;
  border-radius: 25px;
  position: relative;
  background-color: #ebebeb;
  flex-grow: 4;
}

.content-item .schedulecomp myProgress div {
  position: absolute;
  display: block;
  height: 16rpx;
  border-radius: 25px;
  background-color: #ffa016;
}

.content-item .schedulecomp text {
  font-size: 24rpx;
}

