    console.log(detai_args);

    util.getServerData(detai_args, "api/getCoursewareVideoplay", function (result) {

      console.log("queryDetail结果:");
      console.log(result);

      if (result.playlist.length < 1) {
        wx.showToast({
          title: "当前所有课程已学完,请返回选择其他课程进行学习",
