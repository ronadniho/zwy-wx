page{
  background-color: #f2f2f2;
}
.top-container{
  width: 100%;
  background-color: #fff;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  padding-bottom: 50rpx;
}
.usertop-container{
  width: 100%;
  position: relative;
}
.usertop-container .image{
  width: 100%;
  height: 250rpx;
}
.userphoto-container{
  position: absolute;
  top: 50%;
  left: 30rpx;
  display: block;
  box-sizing: border-box;
  width: 180rpx;
  height: 180rpx;
  margin-top: -100rpx;
  border-radius: 50%;
  padding: 10rpx;
  background-color: rgba(255, 255, 255, 1);
  overflow: hidden;
}
.userphoto-container image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.logout{
  position: absolute;
  top: 90rpx;
  right: 50rpx;
  color: #fff;
  font-size: 36rpx;
}
.username-welcome{
  position: absolute;
  top: 90rpx;
  left: 240rpx;
  color: #fff;
  font-weight: bold;
}
.number-container{
  width: 100%;
  margin-top: 30rpx;
}
.number-container .number-item{
  display: inline-block;
  width: 33.3%;
  box-sizing: border-box;
  text-align: center;
}
.number-container .number-item view{
  font-size: 100rpx;
}
.number-container .number-item div{
  color: #aaa;
  font-size: 30rpx;
}
view.color1{
  color: #FE4B20;
}
view.color2{
  color: #1F86FF;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}
view.color3{
  color: #AA3F8F;
}
.menu-container{
  width: 100%;
  padding: 0rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
}
.menu-item{
  width: 50%;
  padding: 50rpx 30rpx 50rpx 110rpx;
  position: relative;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  float: left;
}
.menu-item image{
  position: absolute;
  left: 40rpx;
  top: 50%;
  width: 50rpx;
  height: 50rpx;
  margin-top: -25rpx;
}
.menu-item i{
  color: #999;
}
.menu-item span{
  color: #ff0000;
}
.menu-item-hover{
  background-color: #f2f2f2;
}
.day-text{
  width: 100%;
  text-align: center;
  padding: 20rpx 0rpx;
  color: #999;
  margin-top: 20rpx;
}


.tabcontent-container{
  width: 100%;
}
.tabcontent-container .content-item{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 340rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  position: relative;
  height: 260rpx;
  overflow: hidden;
  font-size: 36rpx;
}
.content-item image{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 300rpx;
  height: 220rpx;
}
.content-item .item-title{
  height: 80rpx;
  overflow: hidden;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  margin-top: 5rpx;
}
.content-item .item-zjr{
  height: 70rpx;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.content-item .item-time{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9;
  padding: 5rpx 10rpx;
}
.content-item .item-time i{
  margin-right: 10rpx;
}
.subcolor{
  color: #999;
}
.font30{
  font-size: 30rpx;
}
.font24{
  font-size: 24rpx;
}
.mb20{
  margin-bottom: 20rpx;
}

.mt20{
  margin-top: 20rpx;
}

.tabcontent-container .hover-class{
  background-color: #f2f2f2;
}