/**special.wxss**/
@import "/pages/classification/index.wxss";
.active {
  color: red;
  border-bottom: 2px solid red;
}
/* 分类 */

 .container .AssociativeSearch{
   position: fixed; 
   margin-top: 17rpx;
   height: 100%;
   width: 100%;
   z-index: 999;
   border-bottom:1px solid #A8A8A8; 
} 
  .container .AssociativeSearch .AssociativeSearch-back{ 
  position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
    z-index: 99
} 
.container .header{
  height: 90rpx;
  width: 100%;
  background: #ffffff;
  padding: 18rpx 0;
  line-height: 50%;
  margin-bottom: 17epx;
  box-shadow: 1px 1px 1px #A8A8A8;
}
.container .header-box {
  display: flex;
}

.container .header .header-fenlei, .container .header .header-message {
  flex: 1;
  text-align: center;
}

.container .header .header-fenlei {
  margin:9rpx 20rpx 0 15rpx;
   
}
.container .header .font-fenlei{
  font-family: 'iconfont';
  font-weight: 500;
  color: #a8a8a8;
  font-size: 42rpx;
  font-style: normal;
  line-height: 20rpx;
}

.container .header .header-search {
  display: flex;
  flex: 5;
  padding: 7rpx;
  margin-top: 4rpx;
  width: 100%;
  border-radius: 50rpx;
  background: #fff;
  height: 50rpx;
  border: 1px solid #a8a8a8;
}

.container .header .header-search .input {
  flex: 5;
  background: #fff;
  margin-top: -2rpx;
  margin-right: 5rpx;
  margin-left: 20rpx;
}

.container .header .header-search .search-img {
  flex: 1;
  text-align: center;
  padding-top: 17rpx;
  color: #ffb0b3;
}

.container .header .text {
  margin: 6rpx 0;
}

.container .header text {
  font-size: 22rpx;
  color: #a8a8a8;
}

/*内容栏  */

.container .box {
 width: 100%;
  background: #f2f2f2;
}

.container .box .box-nav {
  display: flex;
  height: 90rpx;
  margin:17rpx 0;

}
/*司局级必修专题  */
.sjjbxzt-container,Teacher-container{
  width: 100%;
  padding: 0rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
}
.sjjbxzt-title,Teacher-title{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  box-sizing: border-box;
  padding:0rpx 30rpx;
  font-size: 36rpx;
  border-bottom: 1px solid #dcdcdc;
}
.active-color{
  color: #F34141;
}
.item-container{
  width: 100%;
  box-sizing: border-box;
  padding:0rpx 10rpx 20rpx 10rpx;
}
.iitem{
  box-sizing: border-box;
  float: left;
  width: 50%;
  padding: 10rpx;
  font-size: 26rpx;
}
.iitem image{
  width: 100%;
  height: 230rpx;
}
.subcolor{
  color: #999;
  margin: 0 10rpx;
}

/*课程  */

.tabcontent-container{
  width: 100%;
}
.tabcontent-container .content-item{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 340rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  position: relative;
  height: 260rpx;
  overflow: hidden;
  font-size: 36rpx;
}
.content-item image{
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 300rpx;
  height: 220rpx;
}
.content-item .item-title{
  height: 132rpx;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  margin-top: 5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.content-item .zuozhe{
  display: flex;
}
.content-item .item-zjr{
  flex: 1;
  height: 70rpx;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.content-item .item-time{
  position: absolute;
  left: 21rpx;
  top: 21rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9;
  padding: 5rpx 10rpx;
  border-top-left-radius: 10rpx;
}
.content-item .item-time i{
  margin-right: 10rpx;
}
.tab-container{
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 130rpx 0rpx 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  position: relative;
  font-size: 36rpx;
}
.tab-item{
  display: inline-block;
  height: 90rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
  padding: 20rpx 0rpx;
}
.tab-item.active{
  color: #F34141;
  border-bottom: 2px solid #F34141;
}
.tab-container scroll-view{
  height: 90rpx;
  width: 100%;
}
.more-tab{
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.tablist{
  white-space: nowrap;
}
.tabcontent-container .hover-class{
  background-color: #f2f2f2;
}
/*教师  */
.Teacher-container{
  width: 100%;
  padding: 0rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
}
.Teacher-title{
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  box-sizing: border-box;
  padding:0rpx 30rpx;
  font-size: 36rpx;
  border-bottom: 1px solid #dcdcdc;
}
.Teacher-photo{
  position: relative;
  height: 268rpx;
}
.Teacher-photo scroll-view{
  height: 268rpx;
}



