/**index.wxss**/

page {
  height: 100%;
}

.login-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items:   center;
  justify-content:  flex-end;
  box-sizing: border-box;
  padding: 0rpx 0;
  background: url(http://www.karma-time.com/res/images/login.png) no-repeat;
  background-size: 100% auto;
}

.login-panel {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  width: 100%;
  height: 1040rpx;
  overflow: hidden;
  padding: 0rpx 80rpx;
  padding-top:400rpx;
  position: relative;
}


.login-panel-v1 {
  box-sizing: border-box;
  padding: 0rpx;
  margin: 0rpx;
  width: 100%;
  height: 100rpx;
  position: relative;
  padding-left: 68rpx;
  margin-top:30rpx;
  border: 1rpx solid #EBEBEB;
  border-radius: 5rpx;
}

.login-panel-v1 i {
  font-size: 37rpx;
  position: absolute;
  left:15rpx;
  top: 29rpx;
  color: #F14141;
}

.login-panel-v1 input {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  color: #494646;
}

.login-place-holder {
  color: #989898;
  font-size: 30rpx;
}

.login-button-panel {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  height: 200rpx;
  width: 100%;
  position: absolute;
  left:0rpx;
  bottom: 20rpx;
  padding: 0rpx 80rpx;
}

.login-button-panel button {
  box-sizing: border-box;
  border: none;
  padding: 0rpx;
  margin: 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  width: 100%;
  background-color: #F14141;
  color: #fff;
  border-radius: 5rpx;
}
.login-button-panel button.mt20{
  margin-top: 20rpx;
  background-color: #f2f2f2;
  color: #333;
}