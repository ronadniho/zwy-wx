page {
  height: 100%;
}

.active-box{
  width: 100%;
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding: 20rpx;
}

.active-box-item-label{
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding: 0rpx;
}

.active-box-item-label .desc-txt-panel {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding: 0rpx;
  width: 100rpx;
  height: 30rpx;
  padding-left: 5rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 40rpx;
}

.active-box-item-label .desc-txt-panel.two-space {
   word-spacing:15rpx; 
   letter-spacing: 1rpx;
}

.active-box-item-label .desc-txt-panel text {
  font-size: 27rpx;
  line-height: 80rpx;
  color:#adabab;
}

.active-box-item {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding: 0rpx;
  width: 100%;
  height: 80rpx;
  position: relative;
  margin-top: 20rpx;
}

.active-box-item.verfiy-box {
  padding-right: 220rpx;
}



.active-box-item .active-box-item-content {
  box-sizing: border-box;
  margin: 0rpx;
  padding: 0rpx;
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #dbdbdb;
  padding-left: 20rpx;
}

.active-box-item .active-box-item-content input{
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding: 0rpx;
  outline: none;
  width: 100%;
  height: 80rpx;
  line-height:80rpx;
  display: inline-block;
  font-size: 30rpx;
}

.active-verfiy-box{
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding: 0rpx;
  outline: none;
  position: absolute;
  right: 0rpx;
  top:0rpx;
  width: 210rpx;
  height: 100%;
}

.active-verfiy-box.send{
  border: 1rpx solid #dbdbdb;
  text-align: center;
  color:#747272;
}

.active-verfiy-box.sending{
  text-align: center;
  background-color: #f74f4f;
  color:#ffffff;
}

.active-verfiy-box image{
  width: 210rpx;
  height: 80rpx;
}

.active-verfiy-box text{
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
}



.login-button-panel {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  height: 150rpx;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  padding: 0rpx 20rpx;
}

.login-button-panel button {
  box-sizing: border-box;
  border: none;
  padding: 0rpx;
  margin: 0rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  width: 100%;
  background-color: #F14141;
  color: #fff;
  border-radius: 5rpx;
  margin-top: 30rpx;
}



.active-place-holder {
  color: #989898;
  font-size: 27rpx;
}
