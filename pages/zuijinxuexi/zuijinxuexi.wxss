/**special.wxss**/

.cintainer {
  width: 100%;
}
/*内容栏  */

.container .box-contant {
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
}
.container .box-contant .time-nav{
  width: 100%;
  text-align: center;
  height: 68rpx;
  line-height: 82rpx;
}
.container .box-contant .time-nav text{
  font-size: 33rpx;
  color: #AFAFAF;
}
.container .box-contant .box-contant-list {
  flex: 1;
  display: flex;
  box-shadow: 1px 1px 1px #A8A8A8;
  background: #ffffff;
  margin: 15rpx 0;
  padding: 25rpx 20rpx 25rpx 25rpx;
  /* height: 220rpx; */
}
.container .box-contant .box-contant-list .img{
  flex: 1;
 margin-right: 15rpx;
 padding-top: 8rpx;
}
.container .box-contant .box-contant-list .img .time{
  width: 145rpx;
  height: 30rpx;
  background: black;
  opacity: 0.3;
  text-align: left;
  line-height: 19rpx;
  position: absolute;
  z-index: 999;
}
.container .box-contant .box-contant-list .img .time text{
  color: #ffffff;
  font-size: 25rpx;
  margin: 0 10rpx;
}
.container .box-contant .box-contant-list .img image{
  width: 278rpx;
  height: 175rpx;
}
.container .box-contant .box-contant-list .jianjie{
  flex: 2
}
.container .box-contant .box-contant-list .jianjie .title{
  font-size: 30rpx;
  color: #616161;
}
.container .box-contant .box-contant-list .jianjie .jieshao{
  font-size: 24rpx;
  color: #AFAFAF;
  line-height: 34rpx;
}