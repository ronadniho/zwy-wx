page {
  height: 100%;
}

.belles-box {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  padding-top: 20rpx;
  padding: 0rpx 40rpx;
}

.belles-box-title {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  width: 100%;
  text-align: center;
  padding: 60rpx 20rpx;
  border-bottom: 1px solid #dcdada;
  font-size: 70rpx;
  font-family: "隶书";
}

.belles-box-content {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  width: 100%;
  padding-top: 30rpx;
  font-size: 30rpx;
  padding-bottom: 150rpx;
}

.belles-box-content rich-text {
  line-height: 50rpx;
}

.belles-fixed {
  position: fixed;
  bottom: 0rpx;
  height: 140rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0px;
  margin: 0px;
  border: none;
  outline: none;
  user-select: none;
}

.love-list-top-conte {
  box-sizing: border-box;
  border: none;
  margin: 0rpx;
  width: 100%;
  height: 100%;
  position: absolute;
  background: linear-gradient(to right, #898888, #696868); 
  z-index: 5;
  border-radius: 12rpx;
}

.belles-music-content {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  z-index: 10;
}

.belles-music-content-x1 {
  width: 130rpx;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.belles-music-content-x2 {
  width: 130rpx;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.belles-music-content-x3 {
  flex: 1 1 auto;
  height: 100%;
  padding-top: 40rpx;
  overflow: hidden;
  padding-left: 10rpx;
}

.belles-music-content-x4 {
  width: 140rpx;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.belles-cicle{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #D0CFCF;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #D0CFCF;
}

.belles-music-image{
  width: 100rpx;
  height: 100rpx;
}

.belles-music-close{
  font-size: 70rpx;
  color:#D0CFCF;
}

.belles-music-play{
  font-size: 90rpx;
  color:#D0CFCF;
}

.p1{
  font-size: 34rpx;
  color:#FFFFFF;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.p2{
  margin-top: 10rpx;
  font-size: 27rpx;
  color:#D0CFCF;
}
