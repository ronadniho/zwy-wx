/**index.wxss**/
@import "/pages/classification/index.wxss";

.container {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}

.bot {
  height: 196rpx;
  width: 100%;
}

/* 分类 */

.container .AssociativeSearch {
  position: fixed;
  margin-top: 17rpx;
  height: 100%;
  width: 100%;
  z-index: 999;
  border-bottom: 1px solid #a8a8a8;
}

.container .AssociativeSearch .AssociativeSearch-back {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.6;
  z-index: 99;
}

.container .header {
  height: 90rpx;
  width: 100%;
  background: #fff;
  padding: 18rpx 0;
  line-height: 50%;
  margin-bottom: 17epx;
  box-shadow: 1px 1px 1px #a8a8a8;
}

.container .header-box {
  display: flex;
}

.container .header .header-fenlei, .container .header .header-message {
  flex: 1;
  text-align: center;
}

.container .header .header-fenlei {
  margin: 9rpx 20rpx 0 15rpx;
}

.container .header .font-fenlei {
  font-family: 'iconfont';
  font-weight: 500;
  color: #a8a8a8;
  font-size: 42rpx;
  font-style: normal;
  line-height: 30rpx;
}

.container .header .font-fenlei .icon-fenlei {
  font-size: 39rpx;
}

.container .header .header-search {
  display: flex;
  flex: 5;
  padding: 7rpx;
  margin-top: 4rpx;
  width: 100%;
  border-radius: 50rpx;
  background: #fff;
  height: 50rpx;
  border: 1px solid #a8a8a8;
}

.container .header .header-search .input {
  flex: 5;
  background: #fff;
  margin-top: -2rpx;
  margin-right: 5rpx;
  margin-left: 20rpx;
  font-size: 31rpx;
  padding-top: 6rpx;
}

.container .header .header-search .search-img {
  flex: 1;
  text-align: center;
  padding-top: 17rpx;
  color: #ffb0b3;
}

.container .header .text {
  margin: 6rpx 0;
}

.container .header text {
  font-size: 23rpx;
  color: #a8a8a8;
}

.container .header .header-fenlei .close {
  font-size: 31rpx;
  margin-top: 21rpx;
  color: #a8a8a8;
}

/*内容栏  */

.container .box {
  width: 100%;
  background: #f2f2f2;
}

.container .box .box-nav {
  display: flex;
  height: 90rpx;
  margin: 10rpx 0 3rpx 0;
}

/*司局级必修专题  */

.sjjbxzt-container, Teacher-container {
  width: 100%;
  padding: 0rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
}

.sjjbxzt-title, Teacher-title {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  font-size: 36rpx;
  color: #616161;
  border-bottom: 1px solid #dcdcdc;
}

.active-color {
  color: #f34141;
  font-size: 31rpx;
}

.item-container {
  width: 100%;
  height: 685rpx;
  box-sizing: border-box;
  padding: 27rpx 20rpx 40rpx 0;
}

.item-container text {
  color: #f14141;
}

.iitem {
  box-sizing: border-box;
  float: left;
  width: 340rpx;
  height: 329rpx;
  font-size: 26rpx;
  margin-left: 25rpx;
}

.iitem image {
  width: 100%;
  height: 230rpx;
}

.sj-text {
  font-size: 25rpx;
  color: #616161;
  padding: 0 4rpx;
}

.sj-peo {
  color: #a9a9a9;
  margin: 0 3rpx;
  font-size: 25rpx;
}

.subcolor {
  flex: 1;
  color: #999;
  margin-right: 20rpx;
  font-size: 31rpx;
}

/*课程  */

.tabcontent-container {
  width: 100%;
}

.tabcontent-container .content-item {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 340rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  position: relative;
  height: 260rpx;
  overflow: hidden;
  font-size: 36rpx;
}

.content-item .image {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 300rpx;
  height: 220rpx;
}

.content-item .erji-i {
  position: absolute;
  left: 127rpx;
  top: 89rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 0 auto;
  z-index: 99;
  text-align: center;
  line-height: 90rpx;
}

.content-item .erji-i image {
  width: 90rpx;
  height: 90rpx;
}

.content-item .item-title {
  height: 85rpx;
  overflow: hidden;
  line-height: 40rpx;
  margin-bottom: 10rpx;
  box-sizing: border-box;
  color: #626262;
  font-size: 32rpx;
  margin-top: 5rpx;
}

.content-item .item-jieshao {
  height: 80rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 31rpx;
  color: #999;
}

