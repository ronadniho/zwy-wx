.content-item .zuozhe {
  display: flex;
}

.content-item .over {
  position: absolute;
  top: 65rpx;
  left: 72%;
}

.content-item .item-zjr {
  flex: 1;
  height: 70rpx;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  font-size: 31rpx;
}

.content-item .item-hot {
  flex: 1;
  height: 70rpx;
  margin-bottom: 10rpx;
  line-height: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  font-size: 29rpx;
}

.content-item .item-zjr i {
  margin-right: 10rpx;
}

.content-item .item-time {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: rgba(0, 0, 0, 0.2);
  z-index: 9;
  padding: 5rpx 10rpx;
  border-top-left-radius: 10rpx;
}

.content-item i {
  margin-right: 2rpx;
}

.tab-container {
  width: 100%;
  box-sizing: border-box;
  padding: 0rpx 130rpx 0rpx 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
  position: relative;
  font-size: 36rpx;
}

.tab-item {
  display: inline-block;
  height: 90rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
  padding: 20rpx 0rpx;
  color: #616161;
}

.tab-item.active {
  color: #f14141;
  border-bottom: 2px solid #f14141;
}

.tab-container scroll-view {
  height: 90rpx;
  width: 100%;
}

.more-tab {
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.tablist {
  white-space: nowrap;
}

.tabcontent-container .hover-class {
  background-color: #f2f2f2;
}

/*教师  */

.Teacher-container {
  width: 100%;
  padding: 0rpx;
  background-color: #fff;
  margin-top: 20rpx;
  box-shadow: 0rpx 5rpx 5rpx rgba(0, 0, 0, 0.05);
}

.Teacher-title {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
  font-size: 36rpx;
  color: #616161;
  border-bottom: 1px solid #dcdcdc;
}

.Teacher-photo {
  position: relative;
  width: 100%;
  height: 268rpx;
  overflow: hidden;
}

.Teacher-photo scroll-view {
  height: 268rpx;
}

.scroll_box {
  width: 100%;
  height: 281rpx;
  overflow: hidden;
  padding: 34rpx 0;
  background: #fff;
  white-space: nowrap;
}

.item_list {
  height: auto;
  margin-right: 32rpx;
  display: inline-block;
}

.item_book_img {
  width: 205rpx;
  height: 269rpx;
}

.item_list .names {
  position: absolute;
  top: 0;
  width: 205rpx;
  height: 269rpx;
}

.item_list .name-top {
  width: 205rpx;
  height: 228rpx;
}

.item_list .name {
  background: black;
  opacity: 0.4;
  color: #fff;
  width: 205rpx;
  height: 43rpx;
  line-height: 43rpx;
  text-align: center;
}

.container .box .box-nav .box-nav-list {
  flex: 1;
  background: #fff;
  box-shadow: 1px 1px 1px #a8a8a8;
  text-align: center;
}

.container .box .box-nav .box-nav-list .zuixin {
  margin: 0 52rpx;
  padding: 19rpx 0;
}

.container .box .box-nav .box-nav-list .nav {
  margin: 20rpx 0;
  font-size: 35rpx;
}

.container .box .box-contant {
  display: flex;
  flex-direction: column;
}

.container .box .box-contant .box-contant-list {
  flex: 1;
  display: flex;
  box-shadow: 1px 1px 1px #a8a8a8;
  background: #fff;
  margin: 17rpx 0;
  padding: 25rpx 20rpx 25rpx 25rpx;
  height: 230rpx;
}

.container .box .box-contant .hover-class {
  background-color: #f2f2f2;
}

.container .box .box-contant .box-contant-list .img {
  flex: 1;
  margin-right: 15rpx;
  padding-top: 8rpx;
}

.container .box .box-contant .box-contant-list .img .time {
  width: 145rpx;
  height: 30rpx;
  background: black;
  opacity: 0.3;
  text-align: left;
  line-height: 19rpx;
  position: absolute;
  z-index: 999;
  color: #fff;
}

.container .box .box-contant .box-contant-list .img .time text {
  font-size: 25rpx;
  margin: 0 10rpx;
}

.container .box .box-contant .box-contant-list .img image {
  width: 298rpx;
  height: 210rpx;
}

.container .box .box-contant .box-contant-list .jianjie {
  flex: 2;
}

.container .box .box-contant .box-contant-list .jianjie .title {
  font-size: 34rpx;
  color: #616161;
  height: 132rpx;
  margin-top: 10rpx;
}

.container .box .box-contant .box-contant-list .jianjie .jieshao {
  font-size: 30rpx;
  color: #afafaf;
  height: 38rpx;
}

.container .box .box-contant .box-contant-list .jianjie .jieshao span {
  margin-left: 10rpx;
}

.empty-container {
  padding: 100rpx 0rpx;
  width: 100%;
  text-align: center;
  color: #c9c9c9;
}

.empty-container view {
  margin-top: 50rpx;
}

.iitem-block {
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
}

.iitem-block image {
  width: 100%;
  height: 430rpx;
}
